{
  "name": "@opencode/shared",
  "version": "1.0.0",
  "description": "Shared types and utilities for OpenCode UI ACP",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@opencode/config": "workspace:*",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "zod": "^3.24.0"
  }
}
