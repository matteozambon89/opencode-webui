FROM node:22-alpine AS base
RUN npm install -g pnpm@9.15.0

FROM base AS builder
WORKDIR /app
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY apps/bridge/package.json ./apps/bridge/
COPY apps/web/package.json ./apps/web/
COPY packages/shared/package.json ./packages/shared/
COPY packages/config/package.json ./packages/config/
RUN pnpm install --frozen-lockfile

COPY . .
RUN pnpm --filter @opencode/shared build
RUN pnpm --filter @opencode/bridge build

# Use pnpm deploy to create a standalone production package
RUN pnpm --filter @opencode/bridge deploy --prod /tmp/bridge-deploy

FROM node:22-slim AS production
WORKDIR /app

# Install dependencies needed for opencode and general utilities
RUN apt-get update && apt-get install -y \
    git \
    curl \
    bash \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Install opencode-ai globally and create proper symlink
RUN npm install -g opencode-ai@latest && \
    ln -sf /usr/local/lib/node_modules/opencode-ai/bin/opencode /usr/local/bin/opencode && \
    opencode --version

COPY --from=builder /tmp/bridge-deploy .
USER 1000
EXPOSE 3001
ENV NODE_ENV=production
ENV PORT=3001
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3001/health', (r) => r.statusCode === 200 ? process.exit(0) : process.exit(1))"
CMD ["node", "dist/index.js"]
