FROM node:22-alpine AS base
RUN npm install -g pnpm@9.15.0

FROM base AS builder
WORKDIR /app
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY apps/bridge/package.json ./apps/bridge/
COPY apps/web/package.json ./apps/web/
COPY packages/shared/package.json ./packages/shared/
COPY packages/config/package.json ./packages/config/
RUN pnpm install --frozen-lockfile

COPY . .
RUN pnpm --filter @opencode/shared build
RUN pnpm --filter @opencode/bridge build

FROM node:22-alpine AS production
RUN addgroup -g 1001 -S nodejs && adduser -S node -u 1001
WORKDIR /app
COPY --from=builder /app/apps/bridge/dist ./dist
COPY --from=builder /app/apps/bridge/package.json ./
COPY --from=builder /app/node_modules ./node_modules
USER node
EXPOSE 3001
ENV NODE_ENV=production
ENV PORT=3001
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3001/health', (r) => r.statusCode === 200 ? process.exit(0) : process.exit(1))"
CMD ["node", "dist/index.js"]
